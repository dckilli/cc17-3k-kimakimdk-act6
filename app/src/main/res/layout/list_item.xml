<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Day Indicator -->
        <TextView
            android:id="@+id/dayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <!-- Image Placeholder -->
        <ImageView
            android:id="@+id/dayImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/day1_image" />

        <!-- Summary of the Goal -->
        <TextView
            android:id="@+id/daySummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary of the day's goal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:paddingTop="8dp" />

        <!-- Detailed Description -->
        <TextView
            android:id="@+id/dayDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detailed description of the goal for the day."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:paddingTop="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>